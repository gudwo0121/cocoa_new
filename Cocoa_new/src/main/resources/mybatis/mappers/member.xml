<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="mapper.member">
	<resultMap id="memberList" type="memberVO">
		<result property="id" column="id" />
		<result property="pwd" column="pwd" />
		<result property="name" column="name" />
		<result property="phone" column="phone" />
		<result property="proImg" column="proImg" />
		<result property="proContents" column="proContents" />
	</resultMap>

	<!-- 회원가입 -->
	<insert id="insertMemberList" parameterType="memberVO">
		<![CDATA[
			INSERT INTO memberTBL
			(id, pwd, name, phone)
			VALUES
			(#{id}, #{pwd}, #{name}, #{phone})
		]]>
	</insert>
	
	<!-- 아이디 중복확인 -->
	<select id="selectCountById" resultType="int" parameterType="memberVO">
		<![CDATA[
			SELECT COUNT(*)
			FROM memberTBL
			WHERE id = #{id}
		]]>
	</select>
	
	<!-- 로그인 검증 -->
	<select id="selectMemberById" resultType="memberVO" parameterType="memberVO">
		<![CDATA[
			SELECT *
			FROM memberTBL
			WHERE id = #{id} AND pwd = #{pwd}
		]]>
	</select>
	
	<!-- 프로필 작성 (수정 포함) -->
	<update id="updateProfileById" parameterType="MemberVO">
		<![CDATA[
			UPDATE memberTBL
			SET proContents = #{proContents}, proImg = #{proImg}
			WHERE id = #{id}
		]]>
	</update>
	
