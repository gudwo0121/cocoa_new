	<!-- 회원정보 조회 -->
	<select id="selectMemberInfoById" resultType="memberVO" parameterType="String">
		<![CDATA[
			SELECT *
			FROM memberTBL
			WHERE id = #{id}
		]]>
	</select>

</mapper>